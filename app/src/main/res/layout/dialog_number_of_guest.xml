<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_form_control">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/actionbar_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/number_of_quest_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:text="Enter number of guest"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/number_of_quest_close_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number_of_quest_close_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_button_blank_no_corners"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

        <Button
            android:id="@+id/number_button_1"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="1"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/number_button_2"
            app:layout_constraintTop_toTopOf="@+id/number_button_2" />

        <Button
            android:id="@+id/number_button_2"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="2"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_1"
            app:layout_constraintRight_toLeftOf="@+id/number_button_3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/number_button_3"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="3"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/number_button_2" />

        <Button
            android:id="@+id/number_button_4"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="4"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/number_button_2"
            app:layout_constraintTop_toTopOf="@+id/number_button_5" />

        <Button
            android:id="@+id/number_button_5"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="5"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/number_button_1"
            app:layout_constraintRight_toLeftOf="@+id/number_button_3"
            app:layout_constraintTop_toBottomOf="@+id/number_button_2" />

        <Button
            android:id="@+id/number_button_6"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="6"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/number_button_5" />

        <Button
            android:id="@+id/number_button_7"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="7"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/number_button_2"
            app:layout_constraintTop_toTopOf="@+id/number_button_8" />

        <Button
            android:id="@+id/number_button_8"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="8"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_1"
            app:layout_constraintRight_toLeftOf="@+id/number_button_3"
            app:layout_constraintTop_toBottomOf="@+id/number_button_5" />

        <Button
            android:id="@+id/number_button_9"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="9"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/number_button_8" />

        <Button
            android:id="@+id/number_button_10"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="10"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/number_button_2"
            app:layout_constraintTop_toTopOf="@+id/number_button_11" />

        <Button
            android:id="@+id/number_button_11"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="11"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_1"
            app:layout_constraintRight_toLeftOf="@+id/number_button_3"
            app:layout_constraintTop_toBottomOf="@+id/number_button_8" />

        <Button
            android:id="@+id/number_button_12"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_number_brown_corner"

            android:gravity="center"
            android:padding="10dp"
            android:text="12"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/number_button_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/number_button_11" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>