<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_background"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/actionBarColor">

    <LinearLayout
        android:id="@+id/left_icon_container"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_action_left"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:padding="6dp"
        android:singleLine="true"
        android:text="CCCC"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/right_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="marquee"
            android:gravity="right"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/action_right_container"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingRight="3dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_action_right"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_lock_white_18dp"
                android:tint="@color/white" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_primary_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/right_icon_container"
        android:layout_toRightOf="@+id/left_icon_container"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/av_app_logo"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/lg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="mamabe"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
