<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange6</item>
        <item name="colorPrimaryDark">#85471E</item>
        <item name="colorAccent">@color/grey_font</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="popup_animation">
        <item name="android:windowEnterAnimation">@anim/popup_animation_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_animation_exit</item>
    </style>

</resources>
